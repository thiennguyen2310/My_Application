<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:backgroundTint="@android:color/darker_gray"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Caculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/txtView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbarSize="30dp"
        android:text=" Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/num8"
        app:layout_constraintTop_toBottomOf="@id/Caculator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/white"
        android:ems="10"
        android:textSize="30sp"
        android:inputType="number"
        android:onClick="clearTextNum1" />

    <Button
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num2"
        app:layout_constraintLeft_toRightOf="@id/sum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sub"
        android:text="0"
        />
    <Button
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num4"
        app:layout_constraintRight_toLeftOf="@id/num2"
        app:layout_constraintBottom_toTopOf="@id/sum"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="1"
        />
    <Button
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num5"
        app:layout_constraintRight_toLeftOf="@id/num3"
        app:layout_constraintBottom_toTopOf="@id/num0"
        app:layout_constraintLeft_toRightOf="@id/num1"
        android:text="2"
        />
    <Button
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num6"
        app:layout_constraintRight_toLeftOf="@id/del"
        app:layout_constraintBottom_toTopOf="@id/sub"
        app:layout_constraintLeft_toRightOf="@id/num2"
        android:text="3"
        />
    <Button
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num7"
        app:layout_constraintRight_toLeftOf="@id/num5"
        app:layout_constraintBottom_toTopOf="@id/num1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="4"
        />
    <Button
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num8"
        app:layout_constraintRight_toLeftOf="@id/num6"
        app:layout_constraintBottom_toTopOf="@id/num2"
        app:layout_constraintLeft_toRightOf="@id/num4"
        android:text="5"
        />
    <Button
        android:id="@+id/num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num9"
        app:layout_constraintRight_toLeftOf="@id/div"
        app:layout_constraintBottom_toTopOf="@id/num3"
        app:layout_constraintLeft_toRightOf="@id/num5"
        android:text="6"
        />
    <Button
        android:id="@+id/num7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtView"
        app:layout_constraintRight_toLeftOf="@id/num8"
        app:layout_constraintBottom_toTopOf="@id/num4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="7"
        />
    <Button
        android:id="@+id/num8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtView"
        app:layout_constraintRight_toLeftOf="@id/num9"
        app:layout_constraintBottom_toTopOf="@id/num5"
        app:layout_constraintLeft_toRightOf="@id/num7"
        android:text="8"
        />
    <Button
        android:id="@+id/num9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtView"
        app:layout_constraintRight_toLeftOf="@id/mul"
        app:layout_constraintBottom_toTopOf="@id/num6"
        app:layout_constraintLeft_toRightOf="@id/num8"
        android:text="9"
        />

    <Button
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/num1"
        app:layout_constraintRight_toLeftOf="@id/num0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="+" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/num3"
        app:layout_constraintRight_toLeftOf="@id/equal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/num0"
        android:text="-"/>

    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/mul"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/del"
        app:layout_constraintLeft_toRightOf="@id/num6"
        android:text="/"/>

    <!-- A button to perform multiplication. -->
    <Button
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/txtView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/div"
        app:layout_constraintLeft_toRightOf="@id/num9"
        android:text="*" />

    <Button
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equal"
        app:layout_constraintLeft_toRightOf="@id/num3"
        />

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/del"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sub"
        />


</androidx.constraintlayout.widget.ConstraintLayout>